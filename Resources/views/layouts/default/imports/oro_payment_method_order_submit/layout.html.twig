{% block _order_review_payment_methods_mollie_payment_widget -%}
    {% if options.payment_method is defined %}
        <div class="hidden"
             data-page-component-module="molliepayment/js/app/components/mollie-order-submit"
             data-page-component-options="{{ {paymentMethod: options.payment_method}|json_encode }}">
        </div>
        <div class="hidden"
             data-page-component-module="molliepayment/js/app/components/mollie-payment-method-component"
             data-page-component-options="{{ {paymentMethod: options.payment_method}|json_encode }}">
        </div>
    {% endif %}
{%- endblock %}